@model EscolaClient.Application.ViewModel.AlunoTurmaDeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Tem certeza que quer excluir essa matrícula?</h3>
<div>
    <h4>Matrícula</h4>
    @Html.ValidationSummary()
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aluno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aluno.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Turma)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Turma.Nome)
        </dd>
    </dl>

    <form asp-action="Delete">
        @Html.HiddenFor(x => x.TurmaId)
        @Html.HiddenFor(x => x.AlunoId)
        <input type="submit" value="Confirmar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
